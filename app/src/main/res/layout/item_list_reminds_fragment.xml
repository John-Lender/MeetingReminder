<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/colorMiddleBlue">

    <TextView
            style="@style/item_list_text"
            android:id="@+id/full_name_item_remind_tv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="John_Bill"
            android:fontFamily="@font/roboto"
            app:layout_constraintTop_toBottomOf="@+id/title_item_remind_tv"
            app:layout_constraintStart_toEndOf="@+id/photo_item_remind_iv" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/date_item_remind_tv"/>
    <TextView
            style="@style/item_list_title"
            android:id="@+id/title_item_remind_tv"
            android:layout_width="0dp" android:layout_height="28dp"
            android:text="Name"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toEndOf="@+id/photo_item_remind_iv"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/date_item_remind_tv" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            style="@style/item_list_text"
            android:id="@+id/email_item_remind_tv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:text="john@gmail.com"
            app:layout_constraintTop_toBottomOf="@+id/full_name_item_remind_tv"
            app:layout_constraintStart_toEndOf="@+id/photo_item_remind_iv" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/date_item_remind_tv"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="56dp" tools:src="@tools:sample/avatars[0]"
            android:id="@+id/photo_item_remind_iv"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            style="@style/item_list_text"
            android:text="10.07.2020"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_item_remind_tv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            style="@style/item_list_text"
            android:text="21:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_item_remind_tv"
            app:layout_constraintTop_toBottomOf="@+id/date_item_remind_tv"
            app:layout_constraintEnd_toEndOf="@+id/date_item_remind_tv"
            app:layout_constraintStart_toStartOf="@+id/date_item_remind_tv" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>